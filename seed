import sys

if float("%d.%d" %(sys.version_info[0], sys.version_info[1])) < 2.7:
    sys.stderr.write("ERROR: Python 2.7 or higher required, sorry.\n")
    sys.exit(1)

import re
import argparse

from shell import Shell
from server import Server
from utils import _SEED_LOG, _init_logger, _init_root
from utils import DEFAULT_ROOT

def main():
    """SEED main program"""
    _init_logger()

    parser = argparse.ArgumentParser(
        description='Storage based on "Extemporal Ensemble" Devices'
        )

    parser.add_argument(
        '-v', '--version',
        action='version',
        version='%(prog)s 1.0')

    parser.add_argument(
        '-S', '--server',
        action='store_true',
        dest='server',
        default=False,
        help='start server on specified ip and port',
        )

    parser.add_argument(
        '-C', '--cli',
        action='store_true',
        dest='cli',
        default=False,
        help='open command line interface on specified server ip and port'
        )

    parser.add_argument(
        '-i', '--init',
        action='store_true',
        dest='initialize',
        default=False,
        help='initialize root on specified directory'
        )

    parser.add_argument(
        '-a', '--address',
        action='store',
        dest='ip',
        default='127.0.0.1',
        help='connect/create server on specified IP address',
        )

    parser.add_argument(
        '-p', '--port',
        action='store',
        dest='port',
        type=int,
        default=10001,
        help='connect/listen to specified port',
        )

    parser.add_argument(
        '-r', '--root',
        action='store',
        dest='root',
        default=DEFAULT_ROOT,
        help='load server on specified directory as root',
        )

    options = parser.parse_args()

    # valid ip, port
    valid_ip = \
        re.search(
            '^(\d{1,2}|1\d\d|2[0-4]\d|25[0-5])(\.(\d{1,2}|1\d\d|2[0-4]\d|25[0-5])){3}',
            options.ip
            )
    valid_port = (options.port > 1000 and options.port < 65535)

    if not (valid_ip and valid_port):
        print "invalid parameter, "\
              "should be as '-a 127.0.0.1 -p 10001 (between 1000 and 65535)'."
        exit(1)

    # which way to go ... start server or open cli or simply init then return?
    if options.initialize:
        # run the shell @ host
        _init_root(options.root)

    elif options.cli:
        # run the shell @ host
        _SEED_LOG.info('Opening command line interface on ip %s port %d ...' %
                       (options.ip, options.port))
        Shell(options.ip, options.port).cmdloop()

    elif options.server:
        # run the server on specified ip, port and root directory
        _SEED_LOG.info('Serving on ip %s port %d root %s ...' %
                       (options.ip, options.port, options.root))
        Server(options.ip, options.port, options.root).run()

    else:
        print "either start server (-S) or enter CLI (-C), "\
              " or use -h to access help."


if __name__ == '__main__':
    main()
